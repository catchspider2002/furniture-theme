{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <section class="border-b light-border scheme-{{ block.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="py-3 px-5 block w-full no-underline tw-link focus-inset animate-arrow">
          {%- endif -%}
              <p class="text-center m-0 {% if block.settings.link != blank %}p-0{% else %}py-3 px-5{% endif %} tracking-wider h5">
                {{ block.settings.text | escape }}
                {%- if block.settings.link != blank -%}
                  {% render 'icon-arrow', classes: 'inline-block h-3 pointer-events-none pl-3 mb-1 md:h-3' %}
                {%- endif -%}
              </p>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </section>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Sign up for our mailing list and get 5% off â€“ Free shipping on all US orders over $29",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent",
              "label": "t:global.color_scheme.options__1.label"
            },
            {
              "value": "secondary",
              "label": "t:global.color_scheme.options__2.label"
            },
            {
              "value": "light",
              "label": "t:global.color_scheme.options__3.label"
            },
            {
              "value": "dark",
              "label": "t:global.color_scheme.options__4.label"
            }
          ],
          "default": "accent",
          "label": "t:global.color_scheme.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
